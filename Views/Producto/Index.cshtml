@{
    ViewData["Title"] = "Lista de Productos";
}

@model List<tl2_tp6_2024_Isas321.Models.Producto>

<a class="btn btn-primary" href="/Producto/Crear">Crear</a>

<h2>Lista de Productos</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var producto in Model)
            {
                <tr>
                    <td hidden>@producto.IdProducto</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Producto" 
                        asp-action="Editar" 
                        asp-route-id="@producto.IdProducto">
                            Editar
                        </a>
                        |
                        <form asp-action="Eliminar" asp-route-id="@producto.IdProducto" method="post" style="display: inline;">
                            <button class="btn btn-danger" type="submit" onclick="return confirm('¿Estás seguro de eliminar este producto?');">
                                Eliminar
                            </button>
                        </form>
                    </td>


                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay productos disponibles.</td>
            </tr>
        }
    </tbody>
</table>
