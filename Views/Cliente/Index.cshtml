@model IEnumerable<tl2_tp6_2024_Isas321.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<h1>Gestión de Clientes</h1>

<!-- Botón para crear un nuevo cliente -->
<a asp-action="Crear" class="btn btn-primary mb-3">Crear Cliente</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        <!-- Botón para editar -->
                        <a asp-action="Editar" asp-route-id="@cliente.ClienteId" class="btn btn-warning btn-sm">Editar</a>

                        <!-- Botón para eliminar -->
                        <a asp-action="Eliminar" asp-route-id="@cliente.ClienteId" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay clientes registrados.</td>
            </tr>
        }
    </tbody>
</table>
