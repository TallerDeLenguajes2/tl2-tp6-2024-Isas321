@{
    ViewData["Title"] = "Editar Presupuesto";
}

@model tl2_tp6_2024_Isas321.Models.Presupuesto

@using tl2_tp6_2024_Isas321.Models

<h2>Editar Presupuesto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdPresupuesto" />

    <div class="form-group">
        <label asp-for="Cliente.ClienteId">Cliente</label>
        <select asp-for="Cliente.ClienteId" class="form-control">
            <option value="">Seleccione un cliente</option>
            @foreach (var cliente in ViewData["Clientes"] as List<Cliente>)
            {
                <option value="@cliente.ClienteId" 
                        selected="@(cliente.ClienteId == Model.Cliente.ClienteId ? "selected" : "")">
                    @cliente.Nombre
                </option>
            }
        </select>
        <span asp-validation-for="Cliente.ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion"></label>
        <input type="date" asp-for="FechaCreacion" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
